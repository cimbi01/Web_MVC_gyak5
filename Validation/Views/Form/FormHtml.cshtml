@model gyak5.Validation.Models.Diak
@{
    ViewBag.Title = "FormHtml";
}

<h2>FormHtml</h2>
<form action="/Form/FormHtml" method="post">
    <div class="form-group">
        <label class="form-control" for="Nev"></label>
        <input class="form-control" type="text" name="Nev" value="" />
        <small>@Html.ValidationMessageFor(m => m.Nev)</small>
    </div>
    <div class="form-group">
        <label class="form-control" for="PontSzam"></label>
        <input class="form-control" type="number" name="PontSzam" value="" />
        <small>@Html.ValidationMessageFor(m => m.PontSzam)</small>
    </div>
    <div class="form-group">
        <input type="submit" name="submit" value="Tovább" class="btn btn-primary" />
    </div>
</form>

@if (Model != null)
{
    <ul>
        <li>@Model.Nev</li>
        <li>@Model.PontSzam</li>
    </ul>
}